<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongo DB</title>
</head>

<body>
    <h1>Mongo Db Examples</h1>
    {{hello}}

    {{#if edit_id}}
    <h1>Edit</h1>
    <br>
    <form method="post" action="/update_books/{{edit_id}}">
        <label>Title</label>
        <input type="text" name="title" value="{{edit_book.title}}">
        <label>Author</label>
        <input type="text" name="author" value="{{edit_book.author}}">
        <button>Submit</button>
    </form>
    {{else}}
    <h1>Create</h1>
    <br>
    <form method="post" action="/store_books">
        <label>Title</label>
        <input type="text" name="title">
        <label>Author</label>
        <input type="text" name="author">
        <button>Submit</button>
    </form>
    <br>
    <br>
    {{/if}}

    <ul>
        {{#each books}}
        <li>
            {{this.title}} - {{this.author}} <a href="/?edit_id={{this._id}}">Edit</a> <a href="/?delete_id={{this._id}}" onclick="return confirm('are you sure want to delete it')">Delete</a>
        </li>

        {{/each}}
    </ul>
</body>

</html>